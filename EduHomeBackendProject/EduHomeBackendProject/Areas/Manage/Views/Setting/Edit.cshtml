@model Setting
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1>Edit</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input type="text" asp-for="Address" class="form-control">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactPhone1">ContactPhone1</label>
            <textarea asp-for="ContactPhone1" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="ContactPhone1"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactPhone2">ContactPhone2</label>
            <textarea asp-for="ContactPhone2" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="ContactPhone2"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <textarea asp-for="Email" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="BannerinAboutText">BannerinAboutText</label>
            <textarea asp-for="BannerinAboutText" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="BannerinAboutText"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstBannerTextPart">FirstBannerTextPart</label>
            <textarea asp-for="FirstBannerTextPart" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="FirstBannerTextPart"></span>
        </div>

        <div class="form-group">
            <label asp-for="FooterDescription">FooterDescription</label>
            <textarea asp-for="FooterDescription" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="FooterDescription"></span>
        </div>

        <div class="form-group">
            <label asp-for="SecondBannerText">SecondBannerText</label>
            <textarea asp-for="SecondBannerText" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="SecondBannerText"></span>
        </div>

        <div class="form-group">
            <label asp-for="Website">Website</label>
            <textarea asp-for="Website" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Website"></span>
        </div>


        <div class="form-group">
            <div class="img-box d-inline-block" style="position:relative">
                <img src="~/img/about/@Model.BannerImage" alt="alternate text" style="width:200px"/>
            </div>
            <input asp-for="BannerImageFile" value="" />
            <span class="text-danger" asp-validation-for="BannerImageFile"></span>
        </div>
        <div class="form-group">
            <div class="img-box d-inline-block" style="position:relative">
                <img src="~/img/logo/@Model.FooterLogo" alt="alternate text" />
            </div>
            <input asp-for="FooterImage" value="" />
            <span class="text-danger" asp-validation-for="FooterImage"></span>
        </div>
        <div class="form-group">
            <div class="img-box d-inline-block" style="position:relative">
                <img src="~/img/logo/@Model.HeaderLogo" alt="alternate text" />
            </div>
            <input asp-for="HeaderImage" value="" />
            <span class="text-danger" asp-validation-for="HeaderImage"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

