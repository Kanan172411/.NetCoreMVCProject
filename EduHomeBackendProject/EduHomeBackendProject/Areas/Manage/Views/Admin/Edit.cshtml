@model AddAdminUpdateViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1>Edit</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input type="text" asp-for="UserName" class="form-control" id="name" placeholder="name">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <input name="UserId" value="@Model.UserId" type="hidden" />
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" id="name" placeholder="password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group ">
            <label for="exampleFormControlSelect1">Role</label>
            <select class="form-control" asp-for="Role" asp-items="@(new SelectList(ViewBag.Roles,"Name","Name"))">
            </select>
            <span class="text-danger" asp-validation-for="Role"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

