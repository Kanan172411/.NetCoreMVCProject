@model Event
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1>Edit</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="EventName">EventName</label>
            <input type="text" asp-for="EventName" class="form-control">
            <span class="text-danger" asp-validation-for="EventName"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="StartTime">StartTime</label>
                <input asp-for="StartTime" class="form-control" type="time" />
                <span class="text-danger" asp-validation-for="StartTime"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="EndTime">EndTime</label>
                <input asp-for="EndTime" class="form-control" type="time" />
                <span class="text-danger" asp-validation-for="EndTime"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="StartDateDayMonth">StartDateDayMonth</label>
                <input asp-for="StartDateDayMonth" class="form-control" type="date" />
                <span class="text-danger" asp-validation-for="StartDateDayMonth"></span>
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Venue">Venue</label>
                <input asp-for="Venue" class="form-control" />
                <span class="text-danger" asp-validation-for="Venue"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventContent">EventContent</label>
                <textarea asp-for="EventContent" value="" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="EventContent"></span>
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="exampleFormControlSelect1">Category</label>
                    <select class="form-control" asp-for="EventCategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                    </select>
                    <span class="text-danger" asp-validation-for="EventCategoryId"></span>
                </div>

                <div class="form-group col-md-6">
                    <label for="exampleFormControlSelect1">Tags</label>
                    <select class="form-control" asp-for="TeacherId" asp-items="@(new SelectList(ViewBag.Teachers,"Id","FullName"))">
                    </select>
                    <span class="text-danger" asp-validation-for="TeacherId"></span>
                </div>

            </div>

            <div class="form-group">
                @if (Model.Image != null)
                {
                    <div class="img-box d-inline-block" style="position:relative">
                        <img src="~/img/event/@Model.Image" alt="Alternate Text" style="width:250px" />
                    </div>

                }
                <input asp-for="ImageFile" value="" />
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

