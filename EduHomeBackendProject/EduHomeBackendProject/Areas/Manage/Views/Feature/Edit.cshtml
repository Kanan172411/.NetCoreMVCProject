@model Feature
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1>Edit</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Title">Title</label>
            <input type="text" asp-for="@Model.Title" class="form-control" id="name" placeholder="Title">
            <span class="text-danger" asp-validation-for="@Model.Title"></span>
        </div>        
        <div class="form-group">
            <label asp-for="@Model.Description">Description</label>
            <input type="text" asp-for="@Model.Description" class="form-control" id="name" placeholder="Description">
            <span class="text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

