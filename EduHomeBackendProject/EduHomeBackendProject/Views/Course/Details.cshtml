@model CourseDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>course details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.course.Image" alt="courses-details" style="width:780px">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.course.CourseName</h2>
                        <p>@Model.course.CourseContent
                        </p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.course.AboutCourse
                                </p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.course.HowToApply
                                </p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.course.Certification
                                </p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.course.StartDate.ToString("MM/dd/yyyy")</span></li>
                                <li>duration <span>@Model.course.Duration Month</span></li>
                                <li>class duration <span>@Model.course.ClassDuration hours</span></li>
                                <li>language <span>@Model.course.Language</span></li>
                                <li>students <span>@Model.course.StudentsCount</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.course.Price</h3>
                        </div>
                        <a class="default-btn forspecial" asp-action="Join" asp-route-CourseId="@Model.course.Id" asp-controller="Course">join now</a>
                    </div>
                    @if (User.IsInRole("Member"))
                    {
                            <div class="reply-area">
                                <h3>LEAVE A REPLY</h3>
                                <p>
                                    I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br>
                                    the is lder of human happinescias unde omnis iste natus error sit volptatem
                                </p>
                                <form id="contact-form" asp-action="SendMessage" asp-route-courseId="@Model.course.Id" method="post">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <p>Subject</p>
                                            <input type="text" name="subject" id="subject">
                                            <p>Massage</p>
                                            <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary" >send message</button>
                                </form>
                            </div>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" asp-action="index">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in Model.CourseCategories)
                            {
                                 <li><a asp-action="index" asp-route-categoryId="@item.Id">@item.Name (@item.course.Count())</a></li>
                            }
                        </ul>
                    </div>


                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (var item in Model.course.courseTags)
                            {
                               <a asp-action="index" asp-route-Tagid="@item.Id" class="mr-10 mb-10">@item.Tag.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
