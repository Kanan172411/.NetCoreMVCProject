@model UserUpdateViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Edit Profile</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Edit Profile</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-12 mb--20">
                                    <label asp-for="UserName">UserName</label>
                                    <input class="mb-0 form-control" asp-for="UserName" placeholder="">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="Email">Email</label>
                                    <input class="mb-0 form-control" asp-for="Email" placeholder="">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="Password">Password</label>
                                    <input class="mb-0 form-control" asp-for="Password" placeholder="">
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="ConfirmPassowrd">Repeat Password</label>
                                    <input class="mb-0 form-control" asp-for="ConfirmPassowrd" placeholder="">
                                    <span class="text-danger" asp-validation-for="ConfirmPassowrd"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label asp-for="CurrentPassowrd">CurrentPassowrd</label>
                                    <input class="mb-0 form-control" asp-for="CurrentPassowrd" placeholder="">
                                    <span class="text-danger" asp-validation-for="CurrentPassowrd"></span>
                                </div>
                                <div class="button-box">
                                    <button type="submit" class="default-btn">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

